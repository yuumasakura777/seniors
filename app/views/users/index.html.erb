
<% provide(:title,'ユーザー一覧') %>

<div class="container">
  <div class="row">
    <h1>ユーザー一覧</h1>
    <%= search_form_for @q do |f| %>
      <div class=" form-group">
        <%= f.label :name_cont , '名前で検索' %>
        <%= f.text_field :name_cont, class: 'form-control'%>
      </div>
      <div><%= f.submit "Search" %></div>
    <% end %>
    <div class=" form-group">
      <%= f.collection_select :residence_id, Residence.all, :id, :name, include_blank: '居住地を選択' %>
    </div

    <% @users.each do |user| %>
      <div class="col-md-3">
        <div class="user-index-image">
          <%= link_to user  do %>
            <%= image_tag user.image.url %>
          <% end %>
        </div>
        <p class="user-index-name"><%= link_to user.name, user %></p>
        <% if current_user.admin? && !current_user?(user) %>
          <%= link_to 'ユーザー削除', user, method: :delete, data: {confirm: "#{user.name}を削除します。よろしいですか?"} %>
        <% end %>
        </div>
    <% end %>
  </div>
</div>
