

<div class="container">
  <h1>ユーザー詳細</h1>
  <div class="user-show-image"><%= image_tag @user.image.url %></div>
  <table class="table table-hover">
      <tbody>
        <tr>
          <th><%= User.human_attribute_name(:name) %></th>
          <td><%= @user.name %></td>
        </tr>
        <tr>
          <th><%= User.human_attribute_name(:age) %></th>
          <td><%= @user.age %></td>
        </tr>
        <tr>
          <th><%= User.human_attribute_name(:gender) %></th>
          <td><%= @user.gender %></td>
        </tr>
        <tr>
          <th><%= User.human_attribute_name(:description) %></th>
          <td><%= @user.description %></td>
        </tr>
      </tbody>
    </table>

</div>
