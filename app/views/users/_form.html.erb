


<%= form_with model:@user, local:true do |f| %>
  <%= render 'shared/error_messages', object:f.object %>
  <div class="form-group">
    <i class="fas fa-user"></i>
    <%= f.label :name %>
    <%= f.text_field :name, placeholder: '名前を入力してください。', class: 'form-control' %>
  </div>
  <div class="form-group">
    <i class="fas fa-envelope"></i>
    <%= f.label :email %>
    <%= f.email_field :email, placeholder: 'メールアドレスを入力してください。', class: 'form-control' %>
  </div>
  <div class="form-group">
    <i class="fas fa-key"></i>
    <%= f.label :password %>
    <%= f.password_field :password, placeholder: 'パスワードを入力してください。', class: 'form-control' %>
  </div>
  <div class=" form-group">
    <i class="fas fa-key"></i>
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, placeholder: 'もう一度パスワードを入力してください。', class: 'form-control' %>
  </div>
  <div class="user-submit"><%= f.submit yield(:submit_button), class: 'btn-block btn-white' %></div>
<% end %>
