


<div class="container">
  <div class="row">
    <div class="col-md-offset-4 col-md-4 users-container">
      <h1 class="h1">質問</h1>
      <%= form_with model:@question, local:true do |f| %>
        <div class=" form-group">
          <%= f.label :title %>
          <%= f.text_field :title, class: 'form-control' %>
        </div>
        <div class=" form-group">
          <%= f.label :content %>
          <%= f.text_area :content, :size=>"60x12", class: 'form-control' %>
        </div>
        <%= f.submit '質問する', class: 'btn-block btn-white' %>
      <% end %>
        <%= link_to '過去の質問一覧はこちら', questions_path %>
    </div>
  </div>
</div>
